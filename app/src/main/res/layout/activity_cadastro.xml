<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/planofundocadastro"
    android:gravity="center_horizontal|center_vertical"
    android:orientation="vertical"
    android:paddingLeft="32dp"
    android:paddingEnd="32dp"
    tools:context=".activty.MainActivity">

    <Space
        android:layout_width="match_parent"
        android:layout_height="70dp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="113dp"
        android:paddingTop="20dp" />

    <EditText
        android:id="@+id/editTextNome"
        android:layout_width="258dp"
        android:layout_height="58dp"
        android:ems="10"
        android:inputType="text" />

    <Space
        android:layout_width="344dp"
        android:layout_height="42dp" />

    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="264dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <EditText
        android:id="@+id/editTextCelular"
        android:layout_width="269dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="35dp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/editTextTextSenha"
        android:layout_width="268dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword" />

    <Space
        android:layout_width="345dp"
        android:layout_height="42dp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/editTextCFSenha"
        android:layout_width="271dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="40dp" />

    <Button
        android:id="@+id/buttonCadastrar"
        android:layout_width="192dp"
        android:onClick="cda3"
        android:layout_height="wrap_content"
        android:text="Cadastrar" />

    <Button
        android:id="@+id/buttonVoltarlogin"
        android:layout_width="188dp"
        android:onClick="voltar2"
        android:layout_height="wrap_content"
        android:text="Voltar" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/cadastro" />

</LinearLayout>